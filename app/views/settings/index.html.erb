<h1>Settings</h1>

<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>

<% if @errors %>
  <div id="error_explanation">
    <h2><%= pluralize(@errors.count, "error") %> errors:</h2>

    <ul>
      <% @errors.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<fieldset>
  <legend>Change Password</legend>
  <%= form_tag(settings_password_path) do %>
    <div class="fiend">
      <%= label_tag 'old_password', 'Old password:' %>
      <%= password_field_tag 'old_password' %>
    </div>
    <div class="fiend">
      <%= label_tag 'password', 'New password:' %>
      <%= password_field_tag 'password' %>
    </div>
    <div class="fiend">
      <%= label_tag 'password_confirmation', 'Confirm:' %>
      <%= password_field_tag 'password_confirmation' %>
    </div>
    <div class="submit">
      <%= submit_tag 'Change Password' %>
    </div>
  <% end %>
</fieldset>
